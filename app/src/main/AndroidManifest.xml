<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.slim_shah.smartvoice" >
    <supports-screens
        android:resizeable="true"
        android:smallScreens="true"
        android:normalScreens="true"
        android:largeScreens="true"
        android:anyDensity="true"
        />
    <application

        android:allowBackup="true"
        android:icon="@drawable/smart_voice"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SmartVoice"
            android:label="@string/title_activity_smart_voice" >
        </activity>
        <activity
            android:name=".LoadData"
            android:label="@string/title_activity_load_data" >
        </activity>
    </application>

</manifest>
